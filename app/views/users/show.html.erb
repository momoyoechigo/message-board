<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1><%= gravatar_for @user %>
        <%= @user.name %></h1>
        
        <% if @user.profile %>
            <%= @user.profile %>
        <% end %>
        <% if @user.area %>
            <%= @user.area %>
        <% end %>
    
        <p><%= link_to "Change of profile", edit_user_path, class: "btn btn-primary" %></p>
    </div>
</div>